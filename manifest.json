{
  "manifest_version": 3,
  "name": "Luna",
  "version": "3.1",
  "description": "A beautiful and productive task manager with AI, encryption, and more.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Luna",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://models.inference.ai.azure.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}